        "custom_liquid": "{%- comment -%}\n  Metafield:\n  Namespace: custom\n  Key: contenido_json\n  Tipo recomendado: JSON\n\n  Estructura esperada del JSON:\n\n  {\n    \"editorials\": [\n      {\n        \"Media\": \"https://...\",\n        \"Content\": {\n          \"caption\": \"Bestseller\",\n          \"Heading\": \"Our signature product\",\n          \"Text\": \"Made with care...\"\n        },\n        \"url\": \"https://...\"\n      }\n    ]\n  }\n{%- endcomment -%}\n\n{%- assign contenido_json = page.metafields.custom.contenido_json.value -%}\n\n{%- if contenido_json and contenido_json.editorials -%}\n  <style>\n    .editorials-grid {\n      display: grid;\n      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));\n      gap: 1.5rem;\n    }\n\n    .editorial-card {\n      display: block;\n      text-decoration: none;\n      color: inherit;\n    }\n\n    .editorial-card__background {\n      position: relative;\n      min-height: 400px;\n      background-size: cover;\n      background-position: center;\n      border-radius: 12px;\n      overflow: hidden;\n      display: flex;\n      align-items: flex-end; /* contenido abajo */\n      justify-content: center; /* centrado horizontal */\n    }\n\n    .editorial-card__background::before {\n      content: \"\";\n      position: absolute;\n      inset: 0;\n      background: linear-gradient(to top, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.1));\n    }\n\n    .editorial-card__overlay {\n      position: relative;\n      padding: 2rem 2.5rem;\n      text-align: center;\n      max-width: 40rem;\n    }\n\n    .editorial-card__caption {\n      margin: 0 0 0.5rem;\n      font-size: 0.8rem;\n      letter-spacing: 0.1em;\n      text-transform: uppercase;\n    }\n\n    .editorial-card__heading {\n      margin: 0 0 0.75rem;\n      font-size: 1.75rem;\n    }\n\n    .editorial-card__text {\n      margin: 0;\n      font-size: 0.95rem;\n      text-align: justify; /* texto justificado */\n    }\n\n    @media (max-width: 749px) {\n      .editorial-card__background {\n        min-height: 280px;\n      }\n\n      .editorial-card__overlay {\n        padding: 1.5rem;\n      }\n    }\n  </style>\n\n  <div class=\"editorials-grid\">\n    {%- for editorial in contenido_json.editorials -%}\n      <a href=\"{{ editorial.url }}\" class=\"editorial-card\">\n        <div\n          class=\"editorial-card__background\"\n          style=\"background-image: url('{{ editorial.Media }}');\"\n        >\n          <div class=\"editorial-card__overlay\">\n            {%- if editorial.Content.caption -%}\n              <p class=\"editorial-card__caption\">\n                {{ editorial.Content.caption }}\n              </p>\n            {%- endif -%}\n\n            {%- if editorial.Content.Heading -%}\n              <h2 class=\"editorial-card__heading\">\n                {{ editorial.Content.Heading }}\n              </h2>\n            {%- endif -%}\n\n            {%- if editorial.Content.Text -%}\n              <p class=\"editorial-card__text\">\n                {{ editorial.Content.Text }}\n              </p>\n            {%- endif -%}\n          </div>\n        </div>\n      </a>\n    {%- endfor -%}\n  </div>\n{%- endif -%}",
